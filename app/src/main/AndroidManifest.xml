<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.yandex.qatools.wifitool">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:allowBackup="false"
        android:label="@string/app_name">
        <activity
            android:name=".NoDisplayActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".Connect"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="ru.yandex.quatools.wifitool.ADD" />
                <action android:name="ru.yandex.quatools.wifitool.INSPECT" />
                <action android:name="ru.yandex.quatools.wifitool.DELETE" />
            </intent-filter>
        </receiver>

        <service
            android:name=".WifiIntentService"
            android:exported="false" />
    </application>

</manifest>
